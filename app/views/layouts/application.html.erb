<!DOCTYPE html>
<html>
  <head>
    <title>FakeEtsy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>  
      <div>Welcome to our fake etsy, <%= current_user.first_name %></div>
      <div><%= link_to "Logout", logout_path %></div>
      <div><%= link_to "My Profile", user_path(current_user) %></div>
      <div><%= link_to "View Shops", shops_path %></div>
      <div><%= link_to "My Cart (#{current_cart.length})", my_cart_path(current_user) %> </div>
    <% else %>
      <div><%= link_to "Login", login_path %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
