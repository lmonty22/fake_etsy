<h1>Edit Item</h1>

<%= render partial: "/shared/error_list", locals: {new_object: @item} %>
<div class="columns">
    <div class="column" style="display:flex; justify-content:flex-start;">
        <%= form_for @item do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %><br>
        <%= f.label :description %>
        <%= f.text_field :description %><br>
        <%= f.label :price %>
        <%= f.number_field :price %><br>
        <%= f.label :quantity %>
        <%= f.number_field :quantity %><br>
        <%= f.label :image %>
        <%= f.file_field :image%><br><br>
        <%= f.submit class: "button is-primary"%>
        <% end %>
    </div>
</div>